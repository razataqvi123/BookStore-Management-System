@model bookstoresolution.ViewModels.BillingCreateViewModel

@{
    ViewData["Title"] = "Create Bill";
}

<!-- Include Bootstrap CSS (add this in _Layout.cshtml or directly here) -->
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .container {
            margin-top: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-control {
            width: 100%;
        }

        .table th, .table td {
            text-align: center;
        }

        .btn-custom {
            margin-top: 10px;
        }

        .table td input[type="number"] {
            width: 60px;
        }
    </style>
</head>

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <!-- Billing Form -->
    <form asp-action="Checkout" method="post">
        <!-- Customer Dropdown -->
        <div class="form-group">
            <label for="customerId">Select Customer:</label>
            <select name="customerId" id="customerId" class="form-control" required>
                @if (Model.Customers != null && Model.Customers.Any())
                {
                    foreach (var customer in Model.Customers)
                    {
                        <option value="@customer.CustomerId">@customer.Name</option>
                    }
                }
                else
                {
                    <option disabled>No customers available</option>
                }
            </select>
        </div>

        <h3>Books</h3>
        <!-- Books Table -->
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Books != null && Model.Books.Any())
                {
                    foreach (var book in Model.Books)
                    {
                        <tr>
                            <td>@book.Title</td>
                            <td>@book.Category.Name</td>
                            <td>@book.Price</td>
                            <td>@book.Stock</td>
                            <td>
                                <input type="hidden" name="bookIds" value="@book.BookId" />
                                <input type="number" name="quantities_@book.BookId" class="form-control" min="1" max="@book.Stock" />
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5">No books available</td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary btn-custom">Checkout</button>
    </form>
</div>

<!-- Include Bootstrap JS (optional) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
