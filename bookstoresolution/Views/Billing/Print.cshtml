@model bookstoresolution.Models.Billing
@{
    ViewBag.Title = "Print Bill";
}

<!-- Include Bootstrap CSS (add this in _Layout.cshtml or directly here) -->
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            margin: 20px;
        }

        .container {
            margin-top: 20px;
        }

        .table th, .table td {
            text-align: center;
        }

        .table-bordered {
            border: 1px solid #ddd;
        }

        h3 {
            margin-top: 20px;
        }

        button {
            margin-top: 20px;
        }
        
        nav
        {
            display: block;
        }

        
    </style>
</head>

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <!-- Customer Details -->
    <div class="mb-4">
        <h3>Customer Details</h3>
        <p><strong>Name:</strong> @Model.Customer.Name</p>
        <p><strong>Date:</strong> @(Model.BillDate.HasValue ? Model.BillDate.Value.ToString("dd-MM-yyyy HH:mm") : "NA")</p>
    </div>

    <!-- Bill Details Table -->
    <h3>Bill Details</h3>
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Book Title</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model.BillDetails)
            {
                <tr>
                    <td>@detail.Book.Title</td>
                    <td>@detail.Quantity</td>
                    <td>@detail.Book.Price</td>
                    <td>@detail.TotalPrice</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Total Amount -->
    <h3>Total Amount: @Model.TotalAmount</h3>

    <!-- Print Button -->
    <button class="btn btn-primary" onclick="window.print()">Print</button>
</div>

<!-- Include Bootstrap JS (optional) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
