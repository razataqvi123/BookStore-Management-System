@model bookstoresolution.Models.Billing

@{
    ViewData["Title"] = "Delete Billing";
}

<h1>Delete Billing</h1>

<h3>Are you sure you want to delete this billing record?</h3>

<div>
    <h4>Billing</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Bill ID
        </dt>
        <dd class="col-sm-10">
            @Model.BillId
        </dd>
        <dt class="col-sm-2">
            Customer
        </dt>
        <dd class="col-sm-10">
            @Model.Customer.Name
        </dd>
        <dt class="col-sm-2">
            Bill Date
        </dt>
        <dd class="col-sm-10">
            @Model.BillDate?.ToString("dd-MM-yyyy HH:mm")
        </dd>
        <dt class="col-sm-2">
            Total Amount
        </dt>
        <dd class="col-sm-10">
            @Model.TotalAmount
        </dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="BillId" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
