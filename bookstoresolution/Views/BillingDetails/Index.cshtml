@model IEnumerable<bookstoresolution.Models.BillDetail>

@{
    ViewData["Title"] = "Bill Details";
}

<h1>Bill Details</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Bill ID</th>
            <th>Customer Name</th>
            <th>Book Title</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Total Price</th>
            <th>Bill Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detail in Model)
        {
            <tr>
                <td>@detail.BillId</td>
                <td>@detail.Bill.Customer.Name</td>
                <td>@detail.Book.Title</td>
                <td>@detail.Quantity</td>
                <td>@detail.Book.Price</td>
                <td>@detail.TotalPrice</td> 
                <td>
                    @(detail.Bill.BillDate.HasValue
                        ? detail.Bill.BillDate.Value.ToString("dd-MM-yyyy HH:mm")
                        : "NA")
                </td>
            </tr>
        }
    </tbody>
</table>
